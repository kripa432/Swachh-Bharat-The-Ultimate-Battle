<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.uma.swachbharat.Instructions"
    android:background="@drawable/flag">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="89dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="The main aim of player is to clean garbage bag while protecting himself from enimies which are produced due to garbage like mosquitoes,files,wasp,etc. The game level increases after you reach target without dying. Your weapons will also get upgraded automatically. Play the game to unlock new arenas."
            android:id="@+id/textView2"
            android:textIsSelectable="true"
            android:textSize="20dp"
            android:textColor="#030303" />
    </LinearLayout>
</RelativeLayout>
